                            <li><a href="#">Hand Protection</a></li>
                            <li><a href="#">Footwear</a></li>
                            <li><a href="#">Fall Arrest</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Industries", "Index", "Home")</li>
