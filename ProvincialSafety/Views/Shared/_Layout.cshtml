<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Provincial Safety</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-2">
                <img src="~/Images/Logo.png" style="height:150px" />
            </div>
                <div class="col-md-9 pull-right">
                    <ul class="nav nav-pills pull-right contact-details">
                        <li><span class="glyphicon glyphicon-earphone"></span> 0121 544 5208</li>
                        <li><span class="glyphicon glyphicon-print"></span> 0121 552 9075</li>
                        <li><span class="glyphicon glyphicon-phone"></span> 07973 954 333</li>
                        <li><span class="glyphicon glyphicon-envelope"></span> sales@provincialsafety.co.uk</li>
                        <li><span class="glyphicon glyphicon-envelope"></span> steve@provincialsafety.co.uk</li>                        
                    </ul>
                    <br />
                    <br />
                    <div class="pull-right" style="text-align:right; font-size: 1.5em">
                        <b>Portway Road</b><br />
                        <b>Oldbury</b><br />
                        <b>West Midlands</b><br />
                        <b>B69 2BP</b>
                    </div>
                </div>

            </div>
    </div>
    <br/>
    <div class="navbar navbar-inverse">

        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Bespoke Clothing", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products<span class="caret"></span></a>
